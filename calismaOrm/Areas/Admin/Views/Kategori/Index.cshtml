@model IEnumerable<Kategori>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Kategori List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Kategori"
            asp-action="Create" class="btn btn-primary ">
                <span>Yeni Kategori</span>
            </a>
        </div>
    </div>
    <div class="row">

   <table class="table table-bordered table-striped my-2">
            <thead>
                <tr>
                    <th>
                        Kategori Name
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Kategori in Model)
                {
                    <tr>
             <td>@Kategori.KategoriAdi</td>
             <td>
    <a asp-controller="Kategori" asp-action="Edit"
    asp-route-id="@Kategori.Id" class="btn btn-primary">
                                Edit
                            </a>
   <a asp-controller="Kategori" asp-action="Delete" 
   asp-route-id="@Kategori.Id" class="btn btn-danger">
                                Delete
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>